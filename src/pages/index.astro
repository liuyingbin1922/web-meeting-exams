---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main style="max-width: 800px; margin: 0 auto; padding: 2rem 1rem; font-family: system-ui, sans-serif;">
      <section style="display: flex; align-items: center; gap: 2rem; margin-bottom: 2rem;">
        <img src="https://avatars.githubusercontent.com/u/25915822?s=96&v=4" alt="Avatar" style="width: 120px; height: 120px; border-radius: 50%; object-fit: cover; border: 2px solid #eee;" />
        <div>
          <h1 style="margin: 0;">Liu Yingbin</h1>
          <p style="margin: 0.2em 0;">yingbinii@aliyun.com</p>
          <p style="margin: 0.2em 0; color: #666;">Frontend Engineer</p>
        </div>
      </section>
      <section style="margin-bottom: 2rem;">
        <h2>Education</h2>
        <ul>
          <li><strong>China Jiliang University</strong>, B.Sc. in Computer Science & Technology<br />Sep 2016 – Jun 2020, Hangzhou</li>
        </ul>
      </section>
      <section style="margin-bottom: 2rem;">
        <h2>Work Experience</h2>
        <ul>
          <li>
            <strong>Taobao (China) Softcom Co., Ltd.</strong> — Frontend Engineer<br />Jan 2022 – Present<br />
